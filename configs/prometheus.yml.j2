global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    cluster: 'docker-swarm'
    environment: 'production'

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  # Docker Metrics from all nodes
  - job_name: 'docker-metrics'
    static_configs:
      - targets:
{% for host in groups['all'] %}
        - '{{ hostvars[host].ansible_host }}:9323'
{% endfor %}
        labels:
          cluster: 'docker-swarm'

  # Node Exporter from all nodes
  - job_name: 'node-exporter'
    static_configs:
      - targets:
{% for host in groups['all'] %}
        - '{{ hostvars[host].ansible_host }}:9100'
{% endfor %}
        labels:
          cluster: 'docker-swarm'

  # cAdvisor from all nodes
  - job_name: 'cadvisor'
    static_configs:
      - targets:
{% for host in groups['all'] %}
        - '{{ hostvars[host].ansible_host }}:8080'
{% endfor %}
        labels:
          cluster: 'docker-swarm'

  # Docker Swarm service discovery for nodes
  - job_name: 'swarm-nodes'
    dockerswarm_sd_configs:
      - host: unix:///var/run/docker.sock
        role: nodes
    relabel_configs:
      - source_labels: [__meta_dockerswarm_node_hostname]
        target_label: instance

  # Docker Swarm service discovery for services
  - job_name: 'swarm-services'
    dockerswarm_sd_configs:
      - host: unix:///var/run/docker.sock
        role: services
    relabel_configs:
      - source_labels: [__meta_dockerswarm_service_name]
        target_label: job

  # Docker Swarm service discovery for tasks
  - job_name: 'swarm-tasks'
    dockerswarm_sd_configs:
      - host: unix:///var/run/docker.sock
        role: tasks
    relabel_configs:
      - source_labels: [__meta_dockerswarm_task_name]
        target_label: instance
