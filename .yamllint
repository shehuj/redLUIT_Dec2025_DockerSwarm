---
extends: default

# Completely skip these rules so they never fail or warn
skip_list:
  # Ignore conventional name casing
  - name[casing]

  # Ignore all strict YAML parsing error rules
  - yaml

# Treat these rules only as warnings (donâ€™t fail CI)
warn_list:
  # Warn for specific YAML issues rather than error
  - yaml[document-start]
  - yaml[trailing-spaces]

rules:
  document-start: disable

  # You already disabled newline-at-end-of-file
  new-line-at-end-of-file: disable

  line-length:
    max: 160
    level: warning

  indentation:
    spaces: 2
    indent-sequences: true

  comments:
    min-spaces-from-content: 1
  comments-indentation: false

  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

  braces:
    max-spaces-inside: 1

  brackets:
    max-spaces-inside: 1

  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']

ignore: |
  .git/
  .github/
  __pycache__/