---
profile: moderate

exclude_paths:
  - .git/
  - .github/
  - configs/
  - __pycache__/

skip_list:
  - yaml[line-length]
  - no-changed-when
  - command-instead-of-shell
  - fqcn[action-core]
  - ignore-errors
  - risky-shell-pipe

warn_list:
  - experimental
  - jinja[spacing]
  - name[casing]

use_default_rules: true
